[alias]

  auto = "!f() { \
    for c in awk cat cut echo git grep sed tr xargs; do if ! command -v ${c} 1>/dev/null; then echo "${c} was NOT found, exiting."; exit 1; fi; done; \
    repository_name=$(git remote get-url origin | tr ./:@ _ 2>/dev/null); \
    echo "${*:-CLI}" > /tmp/"${repository_name:?}".msg; \
    echo >> /tmp/"${repository_name:?}".msg; \
    git status --porcelain=v1 --untracked-files=no -M >> /tmp/"${repository_name:?}".msg; \
    echo >> /tmp/"${repository_name:?}".msg; \
    echo "-- This message was automatically generated by \\'git auto\\'" >> /tmp/"${repository_name:?}".msg; \
    if [ -s /tmp/"${repository_name:?}".msg ]; then \
      if [ -x "$(command -v gpg)" ] && [ "$(git config commit.gpgsign 2>/dev/null)" = 'true' ]; then \
        git commit --all --file /tmp/"${repository_name:?}".msg --signoff; \
      else \
        git commit --all --file /tmp/"${repository_name:?}".msg; \
      fi; \
    fi; \
    }; f"
